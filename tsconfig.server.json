{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}